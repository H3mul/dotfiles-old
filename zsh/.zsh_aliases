alias l='ls -lFh'
alias la='ls -lAFh'
alias lr='ls -lRAFh'
alias lt='ls -ltFh'
alias ll='ls -l'
alias ld='ls -ld .*'

alias h='history'
alias e='exit'

alias timestamp='date "+%Y.%m.%d-%H.%M.%S"'

alias grepr="grep -rni"

calc () {
    cmd="print($@)"
    python -c $cmd
}

ds () {
    du -h -d 1 $@ | sort -hr
}

# https://grml.org/zsh/zsh-lovers.html
alias -g NUL="> /dev/null 2>&1"
alias -g NE="2>/dev/null"

alias -g CL="2>&1 | cat -A"
alias -g LL="2>&1 | less"
alias -g L="| less"

alias -g H='| head'
alias -g HL='|& head -20'

alias -g T='| tail'
alias -g TL='| tail -20'

alias -g G='| rg'

alias vim='nvim'

ipleak () {
    curl "https://ipleak.net/json/$@"
}

