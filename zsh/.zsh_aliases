}


# if no tmuxp, just open tmux
# if argument,

tm () {
    if [ -z "$1" ]; then
        tmuxp load -y . 2>/dev/null

        # No tmuxp config, just start tmux
        if [ $? -ne 0 ]; then
            tmux attach || tmux new
        fi
    else
        tmuxp load -y ".$1.tmuxp.yml"
    fi
}

