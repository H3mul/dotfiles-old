# should be the same as dir name
appname="tmux"
# Organization and grouping
tags=(cli)
# yay packages required for this app
pkg_depends=(tmux tmuxp)

# Commands run after package installs
stow_post () {
    local tmux_home="$HOME/.tmux/plugins/tpm"
    [ -d "$tmux_home" ] && sub_msg "TMP already installed, skipping..." && return

    sub_msg "Installing TPM (tmux package manager)..."
    git clone https://github.com/tmux-plugins/tpm "$HOME/.tmux/plugins/tpm"
    sub_msg "Installing TPM plugins..."
    ~/.tmux/plugins/tpm/scripts/install_plugins.sh
}
